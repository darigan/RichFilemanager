{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "importHelpers": true,
    "paths": {
      "tslib": [
        "./node_modules/tslib/tslib.d.ts"
      ]
    },
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./scripts/alertify.js/",
      "./scripts/lazyload/typings/"
    ],
    "allowSyntheticDefaultImports": true,
    "sourceRoot": "./src/"
  }
}